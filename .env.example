# TwinScribe Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# OpenRouter API Configuration (Primary LLM Provider)
# =============================================================================
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Base URL (default, usually no need to change)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# Model Configuration
# =============================================================================
# These are the default models used by each agent. Override if needed.

# Stream A - Documenter (Generation tier)
STREAM_A_DOCUMENTER_MODEL=anthropic/claude-sonnet-4-5-20250929

# Stream A - Validator (Validation tier)
STREAM_A_VALIDATOR_MODEL=anthropic/claude-haiku-4-5-20251001

# Stream B - Documenter (Generation tier)
STREAM_B_DOCUMENTER_MODEL=openai/gpt-4o

# Stream B - Validator (Validation tier)
STREAM_B_VALIDATOR_MODEL=openai/gpt-4o-mini

# Comparator/Arbitrator (Arbitration tier - premium model)
COMPARATOR_MODEL=anthropic/claude-opus-4-5-20251101

# =============================================================================
# Beads/Jira Configuration (Issue Tracking)
# =============================================================================
# Jira server URL
JIRA_SERVER=https://your-org.atlassian.net

# Jira project keys
JIRA_DOC_PROJECT=LEGACY_DOC
JIRA_REBUILD_PROJECT=REBUILD

# Jira authentication
JIRA_USERNAME=automation@your-org.com
JIRA_API_TOKEN=your_jira_api_token_here

# =============================================================================
# Processing Configuration
# =============================================================================
# Maximum iterations for convergence loop
MAX_ITERATIONS=5

# Convergence thresholds
CALL_GRAPH_MATCH_THRESHOLD=0.98
DOCUMENTATION_SIMILARITY_THRESHOLD=0.95
MAX_OPEN_DISCREPANCIES=2

# Ticket resolution timeout (hours)
TICKET_RESOLUTION_TIMEOUT_HOURS=48

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log output directory (relative to project root)
LOG_DIR=logs

# Enable verbose output
VERBOSE=false

# =============================================================================
# Output Configuration
# =============================================================================
# Output directory for generated documentation
OUTPUT_DIR=output

# Output file names
DOCUMENTATION_FILE=documentation.json
CALL_GRAPH_FILE=call_graph.json
REBUILD_TICKETS_FILE=rebuild_tickets.json
CONVERGENCE_REPORT_FILE=convergence_report.json
